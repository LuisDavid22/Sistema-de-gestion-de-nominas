@model Sistema_de_gestion_de_nominas.Models.Employee
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>
@Html.ValidationSummary(true, "Please fix the following errors")

@using (Html.BeginForm("Save", "Employees"))
{
    <div class="container" style="width:600px;margin-left:0px">
        <div class="form-group">
            @Html.LabelFor(e => e.Name)
            @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.LastName)
            @Html.TextBoxFor(e => e.LastName, new { @class = "form-control" })
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(e => e.Genre, "M", new { @class = "form-check-input" })
            @Html.Label("", "Masculino", new { @class = "form-check-label" })
        </div>
        <div class="form-check">
            @Html.RadioButtonFor(e => e.Genre, "F", new { @class = "form-check-input" })
            @Html.Label("", "Femenino", new { @class = "form-check-label" })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(e => e.GrossSalary)
            @Html.TextBoxFor(e => e.GrossSalary, "{0:N0}", new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.GrossSalary)
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(e => e.Active) Activo
            </label>
        </div>
        @Html.HiddenFor(e => e.Id)
        <button type="submit" class="btn btn-primary">@{var texto = Model.Id == 0 ? "Crear" : "Editar";} @texto  Empleado</button>


    </div>

}
